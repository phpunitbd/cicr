<?xml version="1.0"?>
<config>
  <sections>
    <design>
      <groups>
        <admin translate="label">
          <label>Admin Theme</label>
          <frontend_type>text</frontend_type>
          <sort_order>1</sort_order>
          <show_in_default>1</show_in_default>
          <fields>
            <theme translate="label comment">
              <label>Admin theme name</label>
              <comment>Override default admin theme.</comment>
              <frontend_type>text</frontend_type>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
            </theme>
          </fields>
        </admin>
      </groups>
    </design>

    <icrc module="data_icrc">
      <label>ICRC</label>
      <tab>advanced</tab>
      <sort_order>1000</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <frontend_model>data_icrc/adminhtml_config</frontend_model>
      <groups>
        <datastudio translate="label">
          <label>Datastudio</label>
          <frontend_type>text</frontend_type>
          <sort_order>10</sort_order>
          <show_in_default>1</show_in_default>
          <acl>admin/system/config/icrc_super_admin</acl>
          <fields>
            <endpoint translate="label comment">
              <label>Datastudio Endpoint</label>
              <comment>Define Datastudio Endpoint.</comment>
              <frontend_type>text</frontend_type>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
            </endpoint>
            <watchdog translate="label comment">
              <label>Enable Datastudio Watchdog</label>
              <comment>If enabled, send mail to general contact if there hasn't been any Datastudio event for the last 2 hours</comment>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_enabledisable</source_model>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
            </watchdog>
          </fields>
        </datastudio>
        <web translate="label">
          <label>Web</label>
          <show_in_store>1</show_in_store>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <sort_order>20</sort_order>
          <fields>
            <welcome translate="label comment">
              <label>Title</label>
              <frontend_type>text</frontend_type>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </welcome>
            <submessage translate="label comment">
              <label>Subtitle</label>
              <frontend_type>text</frontend_type>
              <sort_order>20</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </submessage>
            <footer_logo translate="label comment">
              <label>Footer logo</label>
              <frontend_type>text</frontend_type>
              <sort_order>30</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </footer_logo>
            <language_available_message>
              <label>Message shown in side bar</label>
              <frontend_type>textarea</frontend_type>
              <sort_order>40</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </language_available_message>
            <cart_image>
              <label>Small image used for cart header button</label>
              <frontend_type>text</frontend_type>
              <sort_order>980</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </cart_image>
            <big_cart_image>
              <label>Image used for cart header button</label>
              <frontend_type>text</frontend_type>
              <sort_order>990</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </big_cart_image>
            <add_to_cart_image>
              <label>Image used for "add to cart" buttons</label>
              <frontend_type>text</frontend_type>
              <sort_order>1000</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </add_to_cart_image>
            <add_to_big_cart_image>
              <label>Image used for big "add to cart" buttons (home)</label>
              <frontend_type>text</frontend_type>
              <sort_order>1010</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </add_to_big_cart_image>
            <contact_message>
              <label>Message shown in contact form</label>
              <frontend_type>textarea</frontend_type>
              <sort_order>1200</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </contact_message>
            <contact_exhibition_message>
              <label>Message shown in contact for exhibition form</label>
              <frontend_type>textarea</frontend_type>
              <sort_order>1250</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </contact_exhibition_message>
          </fields>
        </web>
        <output translate="label">
          <label>Output</label>
          <show_in_store>1</show_in_store>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <sort_order>30</sort_order>
          <fields>
            <pdf_logo_max_height translate="label comment">
              <label>Maximum Logo Height on PDF Pages</label>
              <frontend_type>text</frontend_type>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <validate>validate-number</validate>
            </pdf_logo_max_height>
            <pdf_logo_max_width>
              <label>Maximum Logo Width on PDF Pages</label>
              <frontend_type>text</frontend_type>
              <sort_order>40</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <validate>validate-number</validate>
            </pdf_logo_max_width>
          </fields>
        </output>
        <janus translate="label">
          <label>Janus</label>
          <frontend_type>text</frontend_type>
          <sort_order>900</sort_order>
          <show_in_default>1</show_in_default>
          <acl>admin/system/config/icrc_super_admin</acl>
          <fields>
            <enable translate="label comment">
              <label>Enable Janus Watchdog</label>
              <comment>If enabled, ICRC admins must use Janus to login</comment>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_enabledisable</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
            </enable>
          </fields>
        </janus>
      </groups>
    </icrc>

    <carriers>
      <groups>

        <icrc translate="label">
          <label>Swiss Post</label>
          <frontend_type>text</frontend_type>
          <sort_order>2</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <active translate="label">
              <label>Enabled</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </active>
            <name translate="label">
              <label>Method name</label>
              <frontend_type>text</frontend_type>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </name>
            <price translate="label">
              <label>Price</label>
              <frontend_type>text</frontend_type>
              <sort_order>5</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </price>
            <handling_type translate="label">
              <label>Calculate Handling Fee</label>
              <frontend_type>select</frontend_type>
              <source_model>shipping/source_handlingType</source_model>
              <sort_order>7</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </handling_type>
            <handling_fee translate="label">
              <label>Handling Fee</label>
              <frontend_type>text</frontend_type>
              <sort_order>8</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </handling_fee>
            <title translate="label">
              <label>Title</label>
              <frontend_type>text</frontend_type>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </title>
          </fields>
        </icrc>

        <icrc_internal translate="label">
          <label>ICRC Logistic</label>
          <frontend_type>text</frontend_type>
          <sort_order>2</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <active translate="label">
              <label>Enabled</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </active>
            <name translate="label">
              <label>Method name</label>
              <frontend_type>text</frontend_type>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </name>
            <title translate="label">
              <label>Title</label>
              <frontend_type>text</frontend_type>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </title>
          </fields>
        </icrc_internal>

      </groups>
    </carriers>

    <payment>
      <groups>
        <icrc translate="label" module="paygate">
          <label>ICRC Internal Invoice</label>
          <sort_order>10</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>0</show_in_store>
          <fields>
            <active translate="label">
              <label>Enabled</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </active>
            <title translate="label">
              <label>Title</label>
              <frontend_type>text</frontend_type>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </title>
          </fields>
        </icrc>
      </groups>
    </payment>

  </sections>
</config>
